{% extends 'base.njk' %}
{% set page_title = title %}
{% block content %}
    <div class="mt-12 container mx-auto px-3 md:px-12 max-w-screen-lg text-lg">
        <div class="mb-12">
            <h1 class=" text-primary mb-1 text-3xl">{{ title }}</h1>
            <h6 class="italic">{{ subtitle }}</h6>
            <p class="text-sm">{{ date | formatBlogDate }}</p>
        </div>
        <div class="prose leading-relaxed">
            {{ content | safe }}
        </div>
    </div>
{% endblock %}